---
import "../styles/global.css";
let isOpen = false;
---

<div class="bg-white shadow-md px-[100px] py-[60px]">
	<nav class= "flex items-center justify-between w-full max-w-[1400px] mx-auto">
		<div class="flex items-center gap-2">
			<img
				src="/src/assets/Images/logo.png"
				alt="Logo"
				class="h-[46.54px] w-auto"
			/>
		</div>

		<ul class="hidden md:flex gap-6 text-sm font-inter">
			<li><a href="#" class="text-[#FF9929]">Home</a></li>
			<li><a href="#">About Us</a></li>
			<li class="relative group">
				<button class="flex items-center gap-1">
					Services
					<svg
						class="w-4 h-4"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M19 9l-7 7-7-7"></path>
					</svg>
				</button>
				<ul
					class="absolute hidden group-hover:block bg-white shadow-md rounded-md mt-2 w-40 text-sm"
				>
					<li>
						<a href="#" class="block px-4 py-2 hover:bg-gray-100"
							>Service 1</a>
					</li>
					<li>
						<a href="#" class="block px-4 py-2 hover:bg-gray-100"
							>Service 2</a>
					</li>
					<li>
						<a href="#" class="block px-4 py-2 hover:bg-gray-100"
							>Service 3</a>
					</li>
				</ul>
			</li>
			<li><a href="#">Contact Page</a></li>
			<li><a href="#">Careers</a></li>
			<li><a href="#">Testimonials</a></li>
			<li><a href="#">Blog</a></li>
		</ul>

		<a
			href="#"
			class="hidden md:inline-block bg-[#FF9929] text-white px-4 py-2 rounded-md hover:bg-orange-600 transition"
		>
			Get Started
		</a>

		<button
			class="md:hidden flex flex-col gap-1"
			onclick="document.querySelector('#mobileMenu').classList.toggle('hidden')"
		>
			<span class="block w-6 h-0.5 bg-black"></span>
			<span class="block w-6 h-0.5 bg-black"></span>
			<span class="block w-6 h-0.5 bg-black"></span>
		</button>
	</nav>

	<div
		id="mobileMenu"
		class="hidden md:hidden bg-white shadow-md px-6 py-4 space-y-3 text-sm"
	>
		<a href="#" class="block">Home</a>
		<a href="#" class="block">About Us</a>
		<a href="#" class="block">Services</a>
		<a href="#" class="block">Contact Page</a>
		<a href="#" class="block">Careers</a>
		<a href="#" class="block">Testimonials</a>
		<a href="#" class="block">Blog</a>
		<a
			href="#"
			class="block bg-[#FF9929] text-white px-4 py-2 rounded-md text-center"
			>Get Started</a
		>
	</div>
</div>
