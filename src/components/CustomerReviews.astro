// src/components/TestimonialSlider.astro

const testimonials = [
  {
    name: "Sarah Johnson",
    role: "CEO, TechCorp Solutions",
    image: "/images/sarah1.jpg",
    text: "The BI Solution Transformed Our Decision-Making Process. We Now Have Real-Time Insights That Have Improved Our Operational Efficiency By 40%.",
    stars: 5,
  },
  {
    name: "Michael Chen",
    role: "CTO, DataFlow Inc",
    image: "/images/michael.jpg",
    text: "Outstanding Data Warehousing Implementation. The Teamâ€™s Expertise And Attention To Detail Exceeded Our Expectations.",
    stars: 5,
  },
  {
    name: "Sarah Johnson",
    role: "CEO, TechCorp Solutions",
    image: "/images/sarah2.jpg",
    text: "The BI Solution Transformed Our Decision-Making Process. We Now Have Real-Time Insights That Have Improved Our Operational Efficiency By 40%.",
    stars: 5,
  },
];
---

<section class="py-16 px-4 md:px-8 max-w-screen-xl mx-auto text-center">
  <h2 class="text-4xl font-extrabold mb-2">What Our Clients Say</h2>
  <p class="text-gray-600 mb-10">Trusted By Industry Leaders Worldwide</p>

<div class="flex justify-center items-center gap-6">
{testimonials.map(t => (
  <div
    class="bg-white shadow-md border p-6 text-left flex flex-col justify-between"
    style="width: 399.95px; height: 215.97px; border-radius: 20px;"
  >
    <div class="flex items-center mb-4">
      <img src={t.image} alt={t.name} class="w-12 h-12 rounded-full mr-4" />
      <div>
        <p class="font-semibold">{t.name}</p>
        <p class="text-sm text-gray-500">{t.role}</p>
      </div>
      <div class="ml-auto flex">
        {[...Array(t.stars)].map(() => (
          <svg
            class="w-5 h-5 text-yellow-400"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.958a1 1 0 00.95.69h4.162c.969 0 1.371 1.24.588 1.81l-3.37 2.448a1 1 0 00-.364 1.118l1.286 3.958c.3.921-.755 1.688-1.54 1.118l-3.37-2.448a1 1 0 00-1.175 0l-3.37 2.448c-.784.57-1.838-.197-1.539-1.118l1.285-3.958a1 1 0 00-.364-1.118L2.075 9.385c-.783-.57-.38-1.81.588-1.81h4.162a1 1 0 00.95-.69l1.286-3.958z" />
          </svg>
        ))}
      </div>
    </div>
    <p class="text-gray-700 text-sm">{t.text}</p>
  </div>
))}


</div>



  <!-- Arrows -->
  <div class="flex justify-center items-center mt-10 space-x-4">
    <button class="w-10 h-10 rounded-full border border-gray-300 flex items-center justify-center hover:bg-gray-100 transition">
      <!-- Left arrow -->
      <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
    </button>
    <button class="w-10 h-10 rounded-full bg-orange-400 text-white flex items-center justify-center hover:bg-orange-500 transition">
      <!-- Right arrow -->
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </div>
</section>
